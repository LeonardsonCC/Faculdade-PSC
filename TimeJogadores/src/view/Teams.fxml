<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="view.TeamsController">
   <center>
      <VBox prefHeight="542.0" prefWidth="491.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" fillWidth="false" prefHeight="91.0" prefWidth="491.0">
               <children>
                  <Label text="Nome do time" />
                  <TextField fx:id="txtTeamName" prefHeight="28.0" prefWidth="240.0" />
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#btnRegisterTeam" text="Cadastrar time">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </VBox>
            <HBox alignment="CENTER" prefHeight="391.0" prefWidth="491.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <children>
                  <TextArea fx:id="lstTeamList" editable="false" prefHeight="335.0" prefWidth="221.0" />
                  <TextArea fx:id="lstPlayerList" editable="false" prefHeight="335.0" prefWidth="221.0" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefHeight="31.0" prefWidth="491.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#btnNewPlayer" text="Adicionar jogador">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>

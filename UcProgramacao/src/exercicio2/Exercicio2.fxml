<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="461.0" prefWidth="404.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="exercicio2.Exercicio2Controller">
   <center>
      <VBox prefHeight="510.0" prefWidth="404.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" fillWidth="false" prefHeight="130.0" prefWidth="690.0">
               <children>
                  <Label text="Quantos funcionarios?" />
                  <TextField fx:id="txtQuantidadeFuncionarios" prefHeight="28.0" prefWidth="233.0" />
                  <Button mnemonicParsing="false" onAction="#iniciaVetores" text="Inicializar vetor">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
            <VBox alignment="CENTER" fillWidth="false" prefHeight="169.0" prefWidth="404.0">
               <children>
                  <Label text="Nome do funcionario" />
                  <TextField fx:id="txtNomeFuncionario" prefHeight="28.0" prefWidth="233.0" />
                  <Label text="Salario" />
                  <TextField fx:id="txtSalario" prefHeight="28.0" prefWidth="233.0" />
                  <Button mnemonicParsing="false" onAction="#inserirFuncionario" text="Inserir funcionario">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
            <VBox alignment="CENTER" fillWidth="false" prefHeight="130.0" prefWidth="690.0">
               <children>
                  <TextArea fx:id="txtResultado" prefHeight="92.0" prefWidth="339.0" />
                  <Button fx:id="btnAtualizaFuncionarios" disable="true" mnemonicParsing="false" onAction="#atualizaFuncionarios" text="Atualizar funcionarios">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>

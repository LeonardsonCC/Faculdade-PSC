<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="parimpar.ParImparController">
   <center>
      <VBox fillWidth="false" prefHeight="335.0" prefWidth="568.0" BorderPane.alignment="CENTER">
         <children>
            <HBox fillHeight="false" prefHeight="33.0" prefWidth="664.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="46.0" prefWidth="291.0">
                     <children>
                        <Label text="Quantos numeros deseja informar?" />
                        <TextField fx:id="txtQuantidadeNumeros" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="93.0" prefWidth="298.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#criaVetor" prefHeight="28.0" prefWidth="163.0" text="Criar vetor" textAlignment="CENTER">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox fillHeight="false" prefHeight="100.0" prefWidth="684.0">
               <children>
                  <VBox alignment="CENTER" fillWidth="false" prefHeight="60.0" prefWidth="350.0">
                     <children>
                        <Label text="Informe um numero">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="txtNumero" prefHeight="28.0" prefWidth="258.0" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="353.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#insereNumero" prefHeight="28.0" prefWidth="165.0" text="Adicionar numero">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <TextArea fx:id="txtResultado" prefHeight="126.0" prefWidth="548.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextArea>
         </children>
      </VBox>
   </center>
</BorderPane>
